<Config>
	<Parameter>
		<Name>PARAMETERS</Name>
		<Description><info><![CDATA[This is a configuration file editor designed to choose parameter values before launching Evolife simulations.<br><br>Its use is rather intuitive. You may click directly on values you want to change, or navigate with arrows and use the [F2] key to edit values.<br><br>Pay attention to explanations displayed in this panel.]]></info></Description>
	</Parameter>
	<Parameter>
		<Name>Ecology</Name>
		<Parameter>
			<Name>PopulationSize</Name>
			<Description><info><![CDATA[Population Size]]></info></Description>
			<Value>300</Value>
		</Parameter>
		<Parameter>
			<Name>LandSize</Name>
			<Description><info><![CDATA[Size of one side of the grid (<i>i.e.</i>how many agents can fit on one row)]]></info></Description>
			<Value>100</Value>
		</Parameter>
	</Parameter>
	<Parameter>
		<Name>Interactions</Name>
		<Parameter Scenario="Segregationism Convention">
			<Name>NbColours</Name>
			<Description><info><![CDATA[Number of different agent types (colours)]]></info></Description>
			<Value>2</Value>
		</Parameter>
		<Parameter>
			<Name>NeighbourhoodRadius</Name>
			<Description><info><![CDATA[Distance at which neighbours are considered]]></info></Description>
			<Value>10</Value>
		</Parameter>
		<Parameter Scenario="Bubbles">
			<Name>InfluenceRadius</Name>
			<Description><info><![CDATA[films influence people within that distance.<br>Make sure that NeighbourhoodRadius + InfluenceRadius remains smaller than the field size.]]></info></Description>
			<Value>10</Value>
		</Parameter>
		<Parameter Scenario="Bubbles">
			<Name>InfluenceRatio</Name>
			<Description><info><![CDATA[Proportion (in %) of people within influence distance that are affected]]></info></Description>
			<Value>50</Value>
		</Parameter>
		<Parameter Scenario="Bubbles">
			<Name>Influence</Name>
			<Description><info><![CDATA[Change due to influence (in % of the difference)]]></info></Description>
			<Value>20</Value>
		</Parameter>
		<Parameter Scenario="Segregationism Convention">
			<Name>Tolerance</Name>
			<Description><info><![CDATA[Percentage of individuals that are different (= different / (same + different)) above which one decides to move.]]></info></Description>
			<Value>50</Value>
		</Parameter>
	</Parameter>
	<Parameter>
		<Name>Scenario</Name>
		<Parameter>
			<Name>ScenarioName</Name>
			<Description><info><![CDATA[Shelling's famous experiment]]></info></Description>
			<Value>Bubbles</Value>
		</Parameter>
		<Parameter>
			<Name>ScenarioFileName</Name>
			<Value>Bubbles.evo</Value>
		</Parameter>
	</Parameter>
	<Parameter>
		<Name>Simulation</Name>
		<Parameter>
			<Name>Correction</Name>
			<Description><info><![CDATA[Teacher's mode.]]></info></Description>
			<Value>1</Value>
		</Parameter>
		<Parameter>
			<Name>DisplayPeriod</Name>
			<Description><info><![CDATA[Display period]]></info></Description>
			<Value>5</Value>
		</Parameter>
		<Parameter Scenario="Bubbles">
			<Name>DisplayTrail</Name>
			<Description><info><![CDATA[Films last for that number of steps on display]]></info></Description>
			<Value>5</Value>
		</Parameter>
		<Parameter>
			<Name>TimeLimit</Name>
			<Description><info><![CDATA[Max number of simulation steps]]></info></Description>
			<Value>300000</Value>
		</Parameter>
		<Parameter>
			<Name>DotSize</Name>
			<Description><info><![CDATA[Size of dots representing individuals in display]]></info></Description>
			<Value>6</Value>
		</Parameter>
		<Parameter>
			<Name>ApplicationDir</Name>
			<Description><info><![CDATA[Directory where the simulation can be found]]></info></Description>
			<Value>.</Value>
		</Parameter>
		<Parameter>
			<Name>Target</Name>
			<Description><info><![CDATA[Programme to be executed]]></info></Description>
			<Value>Bubbles.py</Value>
		</Parameter>
		<Parameter>
			<Name>RunConfigFile</Name>
			<Description><info><![CDATA[Parameter file that will be read by the programme]]></info></Description>
			<Value>_Params.evo</Value>
		</Parameter>
		<Parameter>
			<Name>ResultDir</Name>
			<Description><info><![CDATA[Directory where results will be stored]]></info></Description>
			<Value>./___Results</Value>
		</Parameter>
		<Parameter>
			<Name>Title</Name>
			<Description><info><![CDATA[Name of the present Configuration Editor]]></info></Description>
			<Value>Evolife_Bubbles</Value>
		</Parameter>
		<Parameter>
			<Name>Icon</Name>
			<Description><info><![CDATA[local path to window icon]]></info></Description>
			<Value>like.png</Value>
		</Parameter>
	</Parameter>
</Config>
